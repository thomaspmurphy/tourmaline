{
  "name": "tourmaline-forum",
  "private": true,
  "type": "module",
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "@rails/actioncable": "^8.0.200",
    "@reduxjs/toolkit": "^2.2.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.358.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^9.1.0",
    "tailwind-merge": "^3.3.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.15.22",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "@vitest/ui": "^3.1.4",
    "autoprefixer": "^10.4.18",
    "concurrently": "^9.1.2",
    "esbuild": "^0.20.1",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.2.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.4.35",
    "prettier": "^3.5.3",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.0",
    "vitest": "^3.1.4"
  },
  "scripts": {
    "build": "bun run build:css && bun run build:js",
    "build:css": "bunx tailwindcss -i ./app/javascript/styles/application.css -o ./app/assets/builds/application.css --minify",
    "build:js": "esbuild app/javascript/application.tsx --bundle --sourcemap --outdir=app/assets/builds",
    "dev": "concurrently \"bunx tailwindcss -i ./app/javascript/styles/application.css -o ./app/assets/builds/application.css --watch\" \"esbuild app/javascript/application.tsx --bundle --sourcemap --outdir=app/assets/builds --watch\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:all": "bundle exec rspec && bun run test:run",
    "lint": "eslint 'app/javascript/**/*.{js,jsx,ts,tsx}'",
    "format": "prettier --write 'app/javascript/**/*.{js,jsx,ts,tsx}'"
  },
  "prettier": {}
}
